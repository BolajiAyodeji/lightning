<MainSection.header title={"#{@user.first_name} #{@user.last_name}"} />

<MainSection.main>

  <.live_component
    module={LightningWeb.UserLive.FormComponent}
    id={@user.id || :new}
    title={@page_title}
    action={@live_action}
    user={@user}
    return_to={Routes.user_index_path(@socket, :index)}
  />

</MainSection.main>
