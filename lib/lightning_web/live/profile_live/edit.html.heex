<Layout.page_content>
  <:header>
    <Layout.header socket={@socket} title={"#{@page_title}"} />
  </:header>
  <Layout.centered>
    <.live_component
      module={LightningWeb.ProfileLive.FormComponent}
      id={@current_user.id}
      user={@user}
      title={@page_title}
      action={@live_action}
    />
  </Layout.centered>
</Layout.page_content>
